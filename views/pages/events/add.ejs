<!-- added head section -->
<% include ../../partials/header %>
<!-- Error handelling -->
<% if(error != '') { %>
<br>
	<% if (Array.isArray(error)){ %>
		<div class="container">
			<div class="row">
				<div class="col-sm-8">
					<p class="bg-danger">
						<% for (var i = error.length - 1; i >= 0; i--) { %>
							<%= error[i] %><br>
						<%}%>
					</p>
				</div>
			</div>
		</div>
	<%} else { %>
		<div class="container">
			<div class="row">
				<div class="col-sm-8">
					<p class="bg-danger"><%= error %></p>
				</div>
			</div>
		</div>
	<% } %>
<% } %>
<br>


<!-- Formating page -->
<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<!-- Adding form -->
			<form class="form-horizontal" method="post" action="/events/add">
				<div class="form-group">
					<label for="e_name" class="col-sm-2 control-label"><%= appText.lines.formLabels.events.name %></label>
					<div class="col-sm-10">
			      		<input type="text" name="e_name" class="form-control" id="e_name" value="<%= formData.e_name %>">
			    	</div>
				</div>
				<div class="form-group">
					<label for="e_start_date" class="col-sm-2 control-label"><%= appText.lines.formLabels.events.dates %> <br /><small><%= appText.lines.formLabels.events.startEnd %></small></label>
					<div class="col-sm-5">
			      		<input type="date" name="e_start_date" class="form-control" id="e_start_date" value="<%= moment(formData.e_start_date).format('YYYY-MM-DD') %>">
			    	</div>
			    	<div class="col-sm-5">
			      		<input type="date" name="e_end_date" class="form-control" id="e_end_date" value="<%= moment(formData.e_end_date).format('YYYY-MM-DD') %>">
			    	</div>
				</div>
				<div class="form-group">
					<label for="e_location" class="col-sm-2 control-label"><%= appText.lines.formLabels.events.location %></label>
					<div class="col-sm-10">
			      		<textarea name="e_location" id="e_location"  class="form-control" cols="30" rows="2"><%= formData.e_location %></textarea>
			    	</div>
				</div>
				<div class="form-group">
					<label for="e_desc" class="col-sm-2 control-label"><%= appText.lines.formLabels.events.description %></label>
					<div class="col-sm-10">
			      		<textarea name="e_desc" id="e_desc"  class="form-control" cols="30" rows="2"><%= formData.e_desc %></textarea>
			    	</div>
				</div>
				<div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				    	<input type="submit" name="submit" value="<%= appText.lines.buttons.events.btnSave %>" class="btn btn-success">
				     	<a href="/" class="btn btn-danger"><%= appText.lines.buttons.events.btnCancel %></a>
				    </div>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../../partials/footer %>

